{
    "compilerOptions": {
        "baseUrl": "src",
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "rootDir": "src",
        "resolveJsonModule": true,
        "noEmit": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "isolatedModules": true,
        "outDir": "build/dist",
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "src/**/*"
    ]
}